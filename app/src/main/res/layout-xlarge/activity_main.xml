<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/infoxml"
        android:layout_height="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"

        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="156dp"></com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingbtn2"
        android:layout_margin="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="@dimen/size_fab"

        android:src="@drawable/ic_baseline_add_circle_outline_24"
        android:layout_height="@dimen/size_fab"
        app:layout_constraintBottom_toBottomOf="parent"

        ></com.google.android.material.floatingactionbutton.FloatingActionButton>


    <TextView
        android:id="@+id/infoxml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recyclerview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textStyle="bold"

        android:text="activity_main.xml(xlarge)">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>