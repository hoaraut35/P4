<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"


    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/view_image_meeting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/circular"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>


    <TextView
        android:id="@+id/view_name_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="RÃ©union A - "
        android:textSize="@dimen/size_subject"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view_image_meeting"
        app:layout_constraintTop_toTopOf="@id/view_image_meeting">

    </TextView>


    <TextView
        android:id="@+id/view_start_time_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14h00 - "
        android:textSize="@dimen/size_time"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/view_name_meeting"
        app:layout_constraintTop_toTopOf="@id/view_name_meeting">

    </TextView>

    <TextView
        android:id="@+id/view_position_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peach"
        android:textSize="@dimen/size_location"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/view_start_time_meeting"
        app:layout_constraintTop_toTopOf="@id/view_name_meeting"></TextView>

    <TextView
        android:id="@+id/view_email_meeting"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:text="maxime@gmail.com alex@gmail.Com"
        android:textSize="@dimen/size_participants"
        app:layout_constraintBottom_toBottomOf="@id/view_image_meeting"
        app:layout_constraintLeft_toRightOf="@id/view_image_meeting"


        app:layout_constraintRight_toLeftOf="@id/view_delete_meeting"

        app:layout_constraintTop_toBottomOf="@+id/view_name_meeting">

    </TextView>

    <ImageView
        android:id="@+id/view_delete_meeting"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="@drawable/ic_baseline_restore_from_trash_24"
        android:src="@drawable/ic_baseline_restore_from_trash_24"
        app:layout_constraintBottom_toBottomOf="@id/view_image_meeting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_image_meeting">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>